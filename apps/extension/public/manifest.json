{
  "manifest_version": 3,
  "name": "VeriNews Pro",
  "version": "1.3.0",
  "description": "AI-powered news verification with real-time fact checking",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting",
    "commands"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["index.css"]
    }
  ],
  "host_permissions": [
    "https://newsapi.org/*"
  ],
  "commands": {
    "close-widget": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Close VeriNews widget"
    }
  }
}